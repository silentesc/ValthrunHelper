<Window x:Class="ValthrunHelper.RestartInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValthrunHelper"
        mc:Ignorable="d"
        Title="RestartInfoWindow" Height="500" Width="1100" WindowStartupLocation="CenterScreen" Closing="Window_Closing" ResizeMode="NoResize">
    <Grid Background="Gray">
        <Label Content="Please restart PC!"
               FontSize="120"
               Foreground="White"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>
    </Grid>
</Window>
